<?xml version="1.0" encoding="utf-8" ?>
<component name="login_choice_screen" extends="group" initialFocus="qrCodeButton">
  <script type="text/brightscript" uri="pkg:/components/registry.brs" />
  <interface>
    <field id="next" type="string" />
    <field id="skip" type="string" />
    <field id="choice" type="string" />
  </interface>
  <children>
    <Label
      id="title_text"
      font="font:LargeBoldSystemFont"
      horizAlign="center"
      text = "Choose Login Method"
      translation="[400,100]" />
    
    <Label
      id="description_text"
      font="font:MediumSystemFont"
      horizAlign="center"
      text = "Select how you would like to log in"
      translation="[400,200]"
      width="480" />

    <Button
      id="qrCodeButton"
      iconUri=""
      focusedIconUri=""
      textColor="0xFFFFFF"
      height="100"
      focusedTextColor="0x111111"
      text="Scan QR Code (Recommended)"
      translation="[400,300]" />

    <Button
      id="manualButton"
      iconUri=""
      focusedIconUri=""
      textColor="0xFFFFFF"
      height="100"
      focusedTextColor="0x111111"
      text="Manual Login"
      translation="[400,420]" />

    <Label
      id="qrDescription"
      font="font:SmallSystemFont"
      horizAlign="center"
      text="Scan QR code with your phone to login easily"
      translation="[400,410]"
      width="480"
      visible="false" />

    <Label
      id="manualDescription"
      font="font:SmallSystemFont"
      horizAlign="center"
      text="Enter credentials directly on your Roku"
      translation="[400,530]"
      width="480"
      visible="false" />
  </children>
  <script type="text/brightscript" uri="pkg:/components/screens/login_choice_screen.brs" />
</component>

